{
  "$schema": "./appsettings-schema.json",
  "GitLab": {
    "ApiUrl": "https://gitlab.com/api/v4",
    "Projects": [
      {
        "ProjectPath": "mygroup/backend-api",
        "TargetBranches": ["main", "develop"]
      }
    ]
  },
  "BitBucket": {
    "ApiUrl": "https://api.bitbucket.org/2.0",
    "Projects": [
      {
        "WorkspaceAndRepo": "myworkspace/myrepo",
        "TargetBranches": ["main", "master"]
      }
    ]
  },
  "AzureDevOps": {
    "OrganizationUrl": "https://dev.azure.com/myorganization",
    "ProjectName": "MyProject",
    "WorkItemIdPatterns": [
      {
        "Name": "VSTS Pattern",
        "Regex": "vsts(\\d+)",
        "IgnoreCase": true,
        "CaptureGroup": 1
      }
    ],
    "ParsingBehavior": {
      "OnParseFailure": "LogWarningAndContinue",
      "StopOnFirstMatch": true
    },
    "TeamMapping": [
      {
        "OriginalTeamName": "MoneyLogistic",
        "DisplayName": "金流團隊"
      },
      {
        "OriginalTeamName": "DailyResource",
        "DisplayName": "日常資源團隊"
      },
      {
        "OriginalTeamName": "Commerce",
        "DisplayName": "商務團隊"
      }
    ]
  },
  "UserMapping": [
    {
      "GitLabUserId": "john.doe",
      "BitBucketUserId": "jdoe",
      "DisplayName": "John Doe"
    },
    {
      "GitLabUserId": "jane.smith",
      "BitBucketUserId": "jsmith",
      "DisplayName": "Jane Smith"
    }
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "ReleaseSync": "Debug"
    }
  }
}
